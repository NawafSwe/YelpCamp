<%- include ('../partials/header') %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add new comment to <%=camp.name%></h1>
<form action="/campgrounds/<%=camp._id%>/comments" method="POST">
    <div style="width: 30%; margin: 2rem auto;">

        <div class="form-group">
          <input
            id="text"
            class="form-control"
            type="text"
            name="comment[text]"
            placeholder="author"
          />
      </div>
     <div class="form-group">
          <input
            id="author"
            class="form-control"
            type="text"
            name="comment[author]"
            placeholder="comment"
          />
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">
            add!
          </button>
        </div>
      </form>

      <a href="/campgrounds">go back</a>
    </div>
  </div>
</div>
<%- include ('../partials/footer') %>