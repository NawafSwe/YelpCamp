<%- include ('partials/header') %>

<div class="container">
  <div class="row">
   
      <h1 style="text-align: center;">Add new campground below</h1>
    
    <div style="width: 30%; margin: 2rem auto;">
      <form action="/campgrounds" method="POST"> 
        <div class="form-group">
                <input
                id="name"
                class="form-control"
                type="text"
                name="name"
                placeholder="Name"
                 />
        </div>


      <div class="form-group">
        <input
        id="url"
        class="form-control"
        type="text"
        name="image_url"
        placeholder="Image url"
        />
      </div>
     
        <div class="form-group">
            <button class="btn btn-lg btn-default btn-block btn-primary">add!</button>
        </div>
      
    </form>

        <a href="/campgrounds">go back</a>
        </div>
        
   
  </div>
</div>
