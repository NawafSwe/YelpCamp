<%- include ('partials/header') %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Login Into Yelp Camp Website!</h1>
<form action="/login" method="POST">
    <div style="width: 30%; margin: 2rem auto;">

        <div class="form-group">
          <input
            id="username"
            class="form-control"
            type="text"
            name="username"
            placeholder="username"
            required
          />
      </div>
     <div class="form-group">
          <input
            id="text"
            class="form-control"
            type="password"
            name="password"
            placeholder="password"
            required
          />
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">
            Login!
          </button>
        </div>
      </form>

      <a class="btn btn-primary" href="/">Go Back</a>
    </div>
  </div>
</div>



<%- include ('partials/footer') %>