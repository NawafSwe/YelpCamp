<%- include ('partials/header') %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Login Into Yelp Camp Website!</h1>
<form action="/login" method="POST">
    <div class="form_holder">

        <div class="form-group">
          <input
            id="username"
            class="form-control"
            type="text"
            name="username"
            placeholder="username"
            required
          />
      </div>
     <div class="form-group">
          <input
            id="text"
            class="form-control"
            type="password"
            name="password"
            placeholder="password"
            required
          />
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">
            Login!
          </button>
        </div>
      </form>

        <p> <a class="btn btn-primary btn-lg small_anchor " href="/">Go Back</a> </p>
        <p> <a class="btn btn-primary btn-lg small_anchor " href="/forgot">forgot password?</a> </p>

    </div>
  </div>
</div>



<%- include ('partials/footer') %>